{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateReservation</th>
                <th>DateEntree</th>
                <th>DateSortie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.DateReservation ? reservation.DateReservation|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.DateEntree ? reservation.DateEntree|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.DateSortie ? reservation.DateSortie|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_reservation_crud_test_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservation_crud_test_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_crud_test_new') }}">Create new</a>
{% endblock %}
