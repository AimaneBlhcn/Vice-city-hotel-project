{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

<style>
        .conteneur {

                display: flex;
                justify-content: center;
                padding: 100px;

        }

        #titre{
                margin-bottom: 50px;
        }

        .blocReinitialisation {

                align-items: center;
                padding: 50px;
                width: 50%;
        }

        .boutonReinitialisation {
                display: flex;
                margin-top: 50px;
        }

        #btnReinit {
                border: solid #E0B973;
                color: black;
                font-weight: bold;
                background-color: #E0B973;
                border-radius: 5px;
                padding: 10px;
                width: 50%;
        }
</style>


<div class="conteneur">

        <div class="blocReinitialisation">

                <h2 id="titre">Réinitialisez votre mot de passe</h2>


                {{ form_start(resetForm) }}

                {{ form_row(resetForm.password) }}

                <div class="boutonReinitialisation">
                        <button class="btn btn-primary" id="btnReinit">Réinitialisez votre mot de passe</button>
                </div>

                {{ form_end(resetForm) }}

        </div>

</div>

{% endblock %}